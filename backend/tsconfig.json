{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": ["ES2020"]
  },
  "include": ["api/**/*", "lib/**/*"],
  "exclude": ["node_modules"]
}
